<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:paddingTop="@dimen/large_margin"
  android:paddingStart="@dimen/large_margin"
  android:paddingEnd="@dimen/large_margin"
  android:background="@drawable/dialog_rounded_bg"
  android:gravity="center"
  android:orientation="vertical">

  <TextView
    android:id="@+id/textProjectName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="@dimen/text_xx_large"/>

  <androidx.cardview.widget.CardView
    android:id="@+id/card_start_session"
    style="@style/CardView.Standard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/large_margin"
    app:contentPadding="@dimen/card_content_padding">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:paddingStart="@dimen/standard_margin"
      android:paddingEnd="@dimen/standard_margin"
      android:text="@string/action_start_new_session"
      android:textColor="@android:color/white"/>

  </androidx.cardview.widget.CardView>


  <androidx.cardview.widget.CardView
    android:id="@+id/card_stroke_add_record"
    style="@style/CardView.Standard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/large_margin"
    app:contentPadding="@dimen/card_radius_diff">

    <androidx.cardview.widget.CardView
      android:id="@+id/card_add_record"
      style="@style/CardView.Inner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:contentPadding="@dimen/card_inner_content_padding">

      <TextView
        android:id="@+id/text_add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="@dimen/standard_margin"
        android:paddingEnd="@dimen/standard_margin"
        android:text="@string/action_add_record"/>

    </androidx.cardview.widget.CardView>

  </androidx.cardview.widget.CardView>


</LinearLayout>